<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>
    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorPrimaryOrange</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="android:textColorSecondary">@color/colorPrimaryOrange</item>
        <item name="actionMenuTextColor">@color/colorPrimaryOrange</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimaryOrange</item>
    </style>

</resources>
