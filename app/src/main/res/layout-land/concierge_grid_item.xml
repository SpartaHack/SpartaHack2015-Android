<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_centerHorizontal="true"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8">

            <TextView
                android:id="@+id/concierge_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Concierge Name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_announcement_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Specialty"
                android:id="@+id/concierge_specialty"
                android:textColor="@color/gray"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/concierge_twitter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twitter_icon"
            android:contentDescription="twitter"
            android:background="@null"
            android:layout_weight=".1"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/concierge_mail_btn"
            android:src="@drawable/mail"
            android:background="@null"
            android:layout_weight=".1"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</android.support.v7.widget.CardView>