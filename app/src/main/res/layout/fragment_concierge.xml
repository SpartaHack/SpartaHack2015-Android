<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_base"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conciergeContactInput"
        android:background="@drawable/rounded_edittext"
        android:autoText="true"
        android:layout_margin="3dp"
        android:minHeight="60dp"
        android:longClickable="true"
        android:textColor="@color/darkBrown"
        android:textCursorDrawable="@null"
        android:textColorHint="#A69779"
        android:padding="5dp"
        android:hint="@string/conciergeInputHint"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT SPARTAHACK"
        android:id="@+id/concierge_contact"
        android:background="@drawable/rounded_button"
        android:layout_margin="3dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>